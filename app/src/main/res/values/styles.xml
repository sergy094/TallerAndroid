<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
    </style>

    <style name="SubtitleStyle">
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textStyle">bold</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Normal">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textStyle">normal</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="CardTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="color">@color/black</item>
    </style>

    <style name="CardTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="color">@color/black</item>
    </style>

    <style name="Widget.App.Button.TextButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>